<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="customerService" class="com.edureka.CustomerService">
        <property name="name" value="Edureka"/>
        <property name="url" value="https://www.edureka.co"/>
    </bean>

    <bean id="hijackBeforeMethodBean" class="com.edureka.HijackBeforeMethod"/>

    <bean id="hijackBeforeMethod" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="customerService"/>
        <property name="interceptorNames">
        <list>
            <value>hijackBeforeMethodBean</value>
        </list>
        </property>

    </bean>


</beans>